{
  "name": "linterhub",
  "displayName": "Linterhub",
  "description": "Linterhub extension",
  "author": "Repometric",
  "license": "MIT",
  "version": "0.3.3",
  "publisher": "Repometric",
  "engines": {
    "vscode": "^1.4.0"
  },
  "icon": "icon.svg",
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "category": "Linterhub",
        "command": "linterhub.activate",
        "title": "Activate linter"
      },
      {
        "category": "Linterhub",
        "command": "linterhub.deactivate",
        "title": "Deactivate linter"
      },
      {
        "category": "Linterhub",
        "command": "linterhub.analyze",
        "title": "Analyze project"
      },
      {
        "category": "Linterhub",
        "command": "linterhub.analyzeFile",
        "title": "Analyze file"
      },
      {
        "category": "Linterhub",
        "command": "linterhub.showOutput",
        "title": "Show output"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "linterhub",
      "properties": {
        "linterhub.enable": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether linterhub is enabled or not."
        },
        "linterhub.cliPath": {
          "type": ["string", "null"],
          "default": null,
          "description": "A path of Linterhub CLI."
        },
        "linterhub.run": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "onOpen",
              "onSave"
            ]
          },
          "default": [
            "onOpen",
            "onSave"
          ],
          "description": "Run linterhub on save (onSave) or on open (onOpen)."
        },
        "linterhub.mode": {
          "type": "string",
          "enum": [
            "dotnet",
            "native",
            "docker"
          ],
          "default": "native",
          "description": "CLI run mode (dotnet, native or docker)."
        },
        "linterhub.languages": {
          "type": "array",
          "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "language": {
                      "type": "string",
                      "description": "The language id to be validated."
                    }
                  }
                }
              ]
          },
          "default": ["coffeescript", "javascript", "css", "html", "scss", "sass", "typescript"],
          "description": "An array of language ids which should be validated."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "linterhub-ide": "^0.3.5",
    "@types/node": "^6.0.40"
  },
  "dependencies": {
    "vscode-languageclient": "^2.6.3"
  }
}
