{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"outDir": "out",
		"lib": [ "es6" ],
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"exclude": [
		"node_modules",
		"server"
	]
}